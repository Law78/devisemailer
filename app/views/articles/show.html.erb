
<div class="row">

  <!-- Blog Post Content Column -->
   <div class="col-lg-8">
    <!-- Blog Post -->
    <!-- Title -->
    <h1 style="font-size: 62.5px;">
      <%= @article.title %>
    </h1>
    <!-- Author -->
    <p class="lead">
      Autore: <%= @article.user.username %>
    </p>
    <!-- Date/Time -->
    <p><span class="glyphicon glyphicon-time"></span> Creato:
      <%= @article.created_at.strftime("%d-%m-%Y %H:%M") %>
    </p>
    <!-- Preview Image -->


    <!-- Post Content -->
    <%= @article.body %>
    <hr>
    <!-- Blog Comments -->
    <%= link_to 'Modifica', edit_article_path(@article) %> |
    <%= link_to 'Elimina', @article, method: :delete, data: { confirm: 'Sei sicuro?' } %> |
    <%= link_to 'Torna indietro', articles_path %>
    <hr>
    <h4>Commenti</h4>
    <div class="well">
      
      <%= render @article.comments %>
    </div>
    <hr>
    
  </div>
  <!-- Blog Sidebar Widgets Column -->
  <div class="col-md-4">
    <!-- Blog Search Well -->

    <!-- Blog Categories Well -->

    <!-- Side Widget Well -->
    <div class="well">
        <% @comments.each do |p| %>
          <strong>Commento: </strong><%= p.body %><br />
          <br />
        <% end %>
        
       <%= will_paginate @comments %>
    </div>
  </div>
  <!-- Comments Form -->

    
  
</div>



<div class="row">
  <div class="col-md-12">
    <%= render 'comments/form' %>
  </div>
</div>
  
